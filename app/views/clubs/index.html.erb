<h1>List of all Clubs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Start time</th>
    <th>Membership</th>
    <th></th>
    <th></th>
  </tr>

<% @clubs.each do |club| %>
  <tr>
    <td><%= club.name %></td>
    <td><%= club.start_time.strftime("%I:%M %p") %></td>
    <td><%= club.users.size %></td>
    <td><%= link_to 'Edit', edit_club_path(club) %></td>
    <td><%= link_to 'Delete', club, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

